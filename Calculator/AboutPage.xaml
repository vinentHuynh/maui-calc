                WidthRequest="140"
                FontSize="16"
                HorizontalOptions="Start"
                Margin="0, 20, 0, 20"
                Padding="5"
                Clicked="OnLearnMoreClicked">
                </Button>

            <Label
                FontSize="18"
                FontFamily="Helvetica"
                HorizontalTextAlignment="Start">Corporate Governance
            </Label>

            <Button
                CornerRadius="22"
                BorderWidth="3"
                Text="Learn More"
                HeightRequest="40"
                WidthRequest="140"
                FontSize="16"
                HorizontalOptions="Start"
                Margin="0, 20, 0, 20"
                Padding="5"
                Clicked="OnLearnMoreClicked">
            </Button>
        </StackLayout>
    </ScrollView>
</ContentPage>
